@model Application.ViewModels.Payroll.PayrollViewModel

@{
    bool editMode = Model.Id == 0 ? false : true;
    Layout = null;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-7 offset-sm-3">
            <div class="card">
                <div class="card-title bg-dark fw-bold text-light">
                    <div class="text-center">@(editMode ? $"Editando la vacaciones {Model.Id}" : "Creando unas vacaciones")</div>
                </div>
                <div class="card-body">

                    <form asp-controller="Payroll" asp-action="@(editMode ? "Update" : "Create")">

                      
                        <div class="mb-3">
                            <label asp-for="Earnings" class="form-label">Sueldo</label>
                            <input asp-for="Earnings" class="form-control" />
                        </div>

                        
                        <input type="hidden" asp-for="Id" />


                        <input type="submit" value="@(editMode ? "Editar" : "Guardar")" class="btn btn-primary"/>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>